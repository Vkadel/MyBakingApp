<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_dimension_small"
    android:textIsSelectable="true"
    tools:context=".RecipeStepsPortraitFragment">

    <TextView
        android:id="@+id/recipe_detail_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:id="@+id/servings"
        app:layout_constraintTop_toBottomOf="@id/recipe_detail_ingredients"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/servings"
        android:id="@+id/put_recipe_ingredients_in_widget"
        android:textSize="8sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/put_ingredients_in_widget" />

</android.support.constraint.ConstraintLayout>
