<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_dimension_small">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/space_dimension_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_dimension_small"
        android:elevation="@dimen/space_dimension_small">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_recipe_name"
                style="@style/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_dimension_small"
                android:text="@string/Recipe_name"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recipe_servings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_dimension_small"
                android:text="@string/Recipe_servings"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintTop_toBottomOf="@id/tv_recipe_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_dimension_small"
                android:text="@string/word_servings"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintLeft_toRightOf="@id/tv_recipe_servings"
                app:layout_constraintTop_toBottomOf="@id/tv_recipe_name" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>